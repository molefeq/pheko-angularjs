<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/bootstrapcss")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/angular.js")"></script>
    <script src="@Url.Content("~/Scripts/ui-bootstrap-tpls-0.11.2.min.js")"></script>
    @RenderSection("scripts", required: false)
    <script src="@Url.Content("~/Scripts/Pheko/displayerrors.js")"></script>
    <script src="@Url.Content("~/Scripts/Pheko/layout.js")"></script>
</head>
<body ng-app="PhekoApp">
    <header class="container-fluid">
        <div class="container-fluid">
            <a href="@Url.Action("Login","Home")"><img src="~/Images/cureware_logo.jpg" alt="Cureware Logo" height="80" /></a>
        </div>
        <div class="menucontainer container-fluid">
            @if (IsRequestAuthenticated)
            {
                @Html.Partial("_LayoutMenu")
            }
        </div>
        <div class="divLine container-fluid"></div>
        @if (IsRequestAuthenticated)
        {
            <div class="container-fluid" style="margin-bottom: 10px;">
                <div id="currentuserdetails"><span id="loginDetails">@("Logged in as " + UserDisplayName)  @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, null)</span></div>
            </div>
        }
    </header>

    <div class="main container-fluid">
        @RenderBody()
    </div>
    <div class="divLine container-fluid"></div>
    <footer class="container-fluid">
        <p>&copy; @DateTime.Now.Year - Pheko Administration</p>
    </footer>
</body>
</html>
