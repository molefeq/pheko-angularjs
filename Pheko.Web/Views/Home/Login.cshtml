@using Pheko.WebPresentation.ViewModels;

@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

@section scripts{
    <script src="@Url.Content("~/Scripts/Pheko/PhekoViewModels/loginviewmodel.js")" type="text/javascript"></script>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-4">

        </div>
        <div class="col-xs-4">
            <div id="divLoginContainer" ng-controller="LoginController">
                <form data-url="@Url.Action("Login", "Home", new { ReturnUrl = Request.QueryString["ReturnUrl"] })" ng-submit="login()" id="frmLogin" name="frmLogin" novalidate>
                    <div class="panel panel-default">
                        <div class="panel-heading">Login</div>
                        <div class="panel-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10" ng-class="error('UserName')">
                                    <div class="col-xs-12">
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", ng_model = "model.UserName", placeholder = "Enter username", ng_required = "true" })
                                        <p ng-show="frmLogin.UserName.$error.required && (frmLogin.UserName.$dirty || submitted)" class="help-block">Username is required.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10" ng-class="error('Password')">
                                    <div class="col-xs-12">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", ng_model = "model.Password", placeholder = "Enter password", ng_required = "true" })
                                        <p ng-show="frmLogin.Password.$error.required && (frmLogin.Password.$dirty || submitted)" class="help-block">Password is required.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <input type="submit" id="btnLogin" value="Log In" name="command" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

