@using Pheko.WebPresentation.ViewModels;

@model CreatePatientViewModel

<div class="modal-header">
    <h4 class="modal-title" id="ModalHeader">Create Patient</h4>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("CreatePatient", "PatientManagement", new { area = "PatientManagement" },
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            OnSuccess = "CreatePatientSuccess",
                            OnBegin = "BeginCreatePatient"
                        },
                        new
                        {
                            id = "frmPatientCreate",
                            enctype = "multipart/form-data",
                            @class = "form-horizontal"
                        }
                        ))
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid">
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10" ng-class="error('FirstName')">
                    <div class=" col-xs-12">
                        @Html.TextBoxFor(model => model.FirstName, new
                   {
                       @class = "form-control",
                       id = "CreatePatientFirstName",
                       placeholder = "Enter FirstName",
                   })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LastName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10" ng-class="error('LastName')">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", id = "CreatePatientLastName", placeholder = "Enter LastName" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="col-xs-12" style="float:right;">
                        <input type="submit" value="Create" name="btnCreatePatient" class="btn btn-primary btn-sm" />
                        <input type="submit" value="Cancel" class="btn btn-primary btn-sm" ng-click="cancel()" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
