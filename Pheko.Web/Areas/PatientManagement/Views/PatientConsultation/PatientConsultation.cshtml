@using GridMvc.Html;
@using Pheko.WebPresentation.ViewModels;

@{
    ViewBag.Title = "Patient Consultation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/ng-grid.css")" />
}

@section scripts{
    <script src="@Url.Content("~/Scripts/ng-grid.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Pheko/PhekoViewModels/patientconsultationviewmodel.js")" type="text/javascript"></script>
}
<div id="divGetPatientConsultationDataUrl" data-url="@Url.Action("GetPatientConsultationData", "PatientConsultation", new { area = "PatientManagement" })"></div>
<div id="divViewPatientConsultationUrl" data-url="@Url.Action("ViewPatientConsultation", "PatientConsultation", new { area = "PatientManagement" })"></div>
<div id="divSearchPatientConsultationsUrl" data-url="@Url.Action("SearchPatientConsultations", "PatientConsultation", new { area = "PatientManagement" })"></div>

<div ng-controller="PatientConsultationController">
    <div class="div-block">
        <input type="submit" value="Create Consultation" id="btnCreateConsultation" name="Command" class="btn btn-primary btn-sm" ng-click="addpatientconsultation()" />
    </div>
    <div id="SearchGridContanier" class="gridStyle" ng-grid="gridOptions" ng-show="showgrid">
    </div>
    <div ng-hide="showgrid">
        No data to display
    </div>

    <script type="text/ng-template" id="patientconsultationmodal">
        @Html.Partial("PatientConsultationEditor", new PatientConsultationViewModel());
    </script>

</div>

